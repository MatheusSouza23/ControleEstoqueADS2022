@model ControleEstoqueADS2022.Models.Fornecedor

@{
    ViewData["Title"] = "Pesquisa";
}

<h1>Pesquisa de Forncedores</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Fornecedor">
            <div class="form-group">
                <label asp-for="nome" class="control-label"></label>
                <input asp-for="nome" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" style="margin-bottom:1rem; margin-top:1rem; background-color:lightgray; color: black; border-radius: 25px; border-color:lightgray; box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.5);" value="Filtrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Fornecedor">LISTAR FORNECEDORES</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
